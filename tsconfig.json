{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@/src/*": ["./src/*"],
      "@/tests/*": ["./tests/*"],
    },
    "lib": ["es2020", "dom"],
  },
  "include": ["src", "tests"],
}

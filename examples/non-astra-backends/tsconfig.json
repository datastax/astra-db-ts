{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/src/*": ["./src/*"],
      "@/tests/*": ["./tests/*"]
    },
    "lib": [
      "es2020",
      "esnext.disposable",
      "dom"
    ]
  },
  "include": ["tests/**/*", "src/**/*"]
}
